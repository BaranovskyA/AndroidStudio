<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/textview_fragment_dialog_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:textAlignment="center"
        android:text="@string/add_location_dialog_text"
        android:textSize="24sp"
        android:textAllCaps="true"
        android:layout_marginTop="15dp"
        />

    <EditText
        android:id="@+id/edittext_fragment_dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/textview_fragment_dialog_title"
        android:layout_margin="30dp"
        android:hint="@string/add_location_dialog_hint" />

</androidx.constraintlayout.widget.ConstraintLayout>