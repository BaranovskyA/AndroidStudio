<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/imageview_fragment_pager_note"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/ic_baseline_assignment_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/textview_fragment_pager_note_title"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/imageview_fragment_pager_note"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="15dp"
        android:padding="5dp"
        android:textSize="16sp"
        tools:text = "Note title"
        />

    <TextView
        android:id="@+id/textview_fragment_pager_note_description"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/imageview_fragment_pager_note"
        app:layout_constraintTop_toBottomOf="@+id/textview_fragment_pager_note_title"
        android:layout_marginTop="10dp"
        android:padding="5dp"
        android:textSize="14sp"
        tools:text = "Note description"
        />

    <TextView
        android:id="@+id/textview_fragment_pager_note_date"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/imageview_fragment_pager_note"
        app:layout_constraintTop_toBottomOf="@+id/textview_fragment_pager_note_description"
        android:layout_marginTop="10dp"
        android:padding="5dp"
        android:textSize="16sp"
        tools:text = "Note date deadline"
        />

</android.support.constraint.ConstraintLayout>