<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="140dp"
    android:layout_marginBottom="30dp"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/imageview_fragment_item_avatar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/student_icon"
        android:layout_width="140dp"
        android:layout_height="140dp" />

    <TextView
        android:id="@+id/textview_fragment_item_name"
        app:layout_constraintStart_toEndOf="@+id/imageview_fragment_item_avatar"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="14sp"
        tools:text="Student name"
        android:textAllCaps="true"
        android:textColor="@color/colorPrimaryDark"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/textview_fragment_item_age"
        app:layout_constraintStart_toEndOf="@+id/imageview_fragment_item_avatar"
        app:layout_constraintTop_toBottomOf="@+id/textview_fragment_item_name"
        android:textSize="14sp"
        tools:text="Student age"
        android:textColor="@color/colorPrimaryDark"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/textview_fragment_item_mark"
        app:layout_constraintStart_toEndOf="@+id/imageview_fragment_item_avatar"
        app:layout_constraintTop_toBottomOf="@+id/textview_fragment_item_age"
        android:textSize="14sp"
        tools:text="Student age"
        android:textColor="@color/colorPrimaryDark"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</android.support.constraint.ConstraintLayout>